# Copy to .env in project root and fill in your real keys

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small
OPENAI_BASE_URL=
# Set to 'none' to run without LLM (returns placeholder response)
LLM_PROVIDER=openai

# Pinecone
PINECONE_API_KEY=
PINECONE_INDEX=policy-index-1536

# MongoDB (optional for history)
MONGO_URI=

# Embeddings
# Set true to force local embeddings if no OpenAI key
USE_LOCAL_EMBEDDINGS=false

